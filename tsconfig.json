{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "composite": false,
    "outDir": "dist/npm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    "dist"
  ]
}
